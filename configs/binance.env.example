# CONFIGURACIÓN DE BINANCE API
# Copia este archivo como .env en la raíz del proyecto y completa con tus datos

# API Keys de Binance (obtener desde https://www.binance.com/es/my/settings/api-management)
BINANCE_API_KEY=tu_api_key_aqui
BINANCE_API_SECRET=tu_api_secret_aqui

# Configuración del trading
BINANCE_TESTNET=true  # true para testnet, false para producción
BINANCE_SYMBOL=BTCUSDT  # Símbolo para trading (Bitcoin/USDT)

# Configuración de riesgo
MAX_POSITION_SIZE=0.1  # Máximo 10% del capital por operación
STOP_LOSS_PCT=0.02     # Stop loss al 2%
TAKE_PROFIT_PCT=0.04   # Take profit al 4%

# Configuración de notificaciones (opcional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Base de datos (opcional)
DATABASE_URL=sqlite:///trading_data.db 